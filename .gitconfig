[user]
    useConfigOnly = true
[push]
    default = simple
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
    editor = vim
    excludesfile = ~/.gitignore.global
[difftool]
    prompt = false
[alias]
    last = log -1 HEAD

[color "status"]
    added = green reverse
    changed = yellow reverse
    untracked = red reverse
